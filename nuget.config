<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <!-- Package Sources -->
  <packageSources>
    <clear />
    <add key="nuget.org" value="https://api.nuget.org/v3/index.json" protocolVersion="3" />
  </packageSources>
  
  <!-- Package Source Mapping for security -->
  <packageSourceMapping>
    <packageSource key="nuget.org">
      <package pattern="*" />
    </packageSource>
  </packageSourceMapping>
  
  <!-- Configuration -->
  <config>
    <!-- Use local nupkgs folder for package output -->
    <add key="globalPackagesFolder" value="nupkgs" />
    <!-- Disable signature validation for local development -->
    <add key="signatureValidationMode" value="accept" />
  </config>
  
  <!-- Disable default push source warnings -->
  <disabledPackageSources />
  
</configuration>
